                else {

                }
            }
        })
    }
    //yoyoyoyoyo

    function getCurTime() { //bunlar butonla deneme yaptıklarım siliicek
        alert(vid.currentTime);
    }

    function setCurTime() {
        vid.currentTime = 65;
    }
</script>
